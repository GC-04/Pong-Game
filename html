    <script>
        //  get the canvas as a javascript object
        let canvas = document.querySelector("canvas");
        //  get a 2d rendering context for drawing to the canvas.
        let context = canvas.getContext("2d");
        //  draw something on the canvas.

        //  SEE https://developer.mozilla.org/en-US/docs/Web/API/Canvas_API
        context.fillStyle = "green";
        context.fillRect(30, 30, 60, 60);

        //  TODO:   change color, size and location of rectangle.
        //  TODO:   draw more rectangles.
        context.fillStyle = "blue";
        context.fillRect(10, 10, 40, 40);

        context.fillStyle =  "orange";
        context.fillRect(30, 30, 60, 60);
